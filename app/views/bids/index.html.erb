<p id="notice"><%= notice %></p>

<%= content_for :title, 'Listing Bids' %>

<div class="row">
  <div class="col-md-12">


    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <% @bids.headers.each do |header| %>
          <th><%= header %></th>
          <% end %>
        </tr>
      </thead>

      <tbody>
        <% @bids.each do |bid| %>
          <tr>
            <td><%= bid.id %></td>
            <td><%= bid.obs %></td>
            <td><%= bid.bidders_excerpt %></td>
            <td>
              <%= link_to bid.model, class: 'btn btn-secondary btn-xs' do %>
                <i class="fa fa-pencil"></i>
              <% end %>
              <%= link_to bid.model, method: :delete, data: { confirm: 'Remover Bid?' }, class: "btn btn-danger btn-xs" do %>
                <i class="fa fa-trash-o"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="row">
      <div class="col-md-12">
        <%= link_to 'Novo Bid', new_bid_path, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>