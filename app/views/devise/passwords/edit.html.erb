<h2>Mude sua senha</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs">
    <%= f.input :password, label: false, placeholder: "Nova senha", required: true, autofocus: true %>
    <%= f.input :password_confirmation, label: false, placeholder: "Confirmar senha", required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Mudar senha", class: "form-control btn btn-primary" %>
  </div>
<% end %>

