<%- if controller_name != 'sessions' %>
  <br /><%= link_to "Entrar", new_session_path(resource_name), class: 'form-control btn btn-secondary' %><br />
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <br /><%= link_to "Cadastro", new_registration_path(resource_name), class: 'form-control btn btn-primary' %><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <br /><%= link_to "Esqueceu sua senha?", new_password_path(resource_name), class: 'form-control btn btn-info' %><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <br /><%= link_to "Não recebi a confirmação de cadastro", new_confirmation_path(resource_name), class: 'form-control btn btn-default'  %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <br /><%= link_to "Não recebi as instruções para desbloquear meu usuário", new_unlock_path(resource_name), class: 'form-control btn btn-default'  %><br />
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <br /><%= link_to "Entrar com #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider), class: 'form-control btn btn-secondary'  %><br />
  <% end -%>
<% end -%>
