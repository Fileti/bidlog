<h2><%= t 'devise.invitations.edit.header' %></h2>

<%= simple_form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put } do |f| %>
  <%= f.error_notification %>
  <%= f.hidden_field :invitation_token %>

  <%= f.input :password, label: false, placeholder: 'Senha', hint: ("Mínimo de #{@minimum_password_length} caracteres" if @validatable) %>
  <%= f.input :password_confirmation, label: false, placeholder: 'Confirmação de senha' %>

  <div class="form-actions">
    <%= f.button :submit, t("devise.invitations.edit.submit_button"), class: 'form-control btn btn-secondary' %>
  </div>
<% end %>
