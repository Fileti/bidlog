<%= content_for :title, 'Choose a winner to bid' %>

<div class="row">
  <div class="col-md-12">
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
        <td>#</td>
        <td>Nome</td>
        <td>Status</td>
        <td></td>
        </tr>
      </thead>
      <tbody>
        <% @bid.responses.each do |response| %>
          <tr>
            <td><%= response.id %></td>
            <td><%= response.bidder.name %></td>
            <td><%= response.status %></td>
            <td>
              <% if (@bid.nil? and @bid.winner_id <= 0)
                link_to bid_choose_path(@bid, response), method: :put, class: "btn btn-secondary btn-xs" do %>
                  <i class="fa fa-trophy"></i>
                <% end
              else  
                if (@bid.winner_id == response.id) %>
                  <i class="fa fa-trophy"></i>  
                <% end
                end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
